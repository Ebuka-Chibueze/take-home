<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:animateLayoutChanges="true"
    tools:context="pbell.offline.ole.org.pbell.FullscreenActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:animateLayoutChanges="true"
        android:id="@+id/fullscreen_content">

        <LinearLayout
            android:id="@+id/fullscreen_content_controls"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="vertical"
            tools:ignore="UselessParent"
            android:weightSum="6"
            android:animateLayoutChanges="true"
            android:background="@drawable/dashboard_bg">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="0.5"
                android:layout_height="0dp"
                android:background="@color/ole_black_blue"
                android:animateLayoutChanges="true"
                android:weightSum="10">

                <Button
                    android:id="@+id/dummy_button"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textSize="@dimen/title"
                    android:textAllCaps="false"
                    android:textColor="@color/ole_white"
                    android:text="@string/bbtext_Home"/>
                <Button
                    android:id="@+id/btnLibrary"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textSize="@dimen/title"
                    android:textAllCaps="false"
                    android:textColor="@color/ole_white"
                    android:text="@string/txtLibrary"/>
                <Button
                    android:id="@+id/btnCourses"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textSize="@dimen/title"
                    android:textAllCaps="false"
                    android:textColor="@color/ole_white"
                    android:text="@string/txtCourses"/>
                <Button
                    android:id="@+id/btnMeetups"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textSize="@dimen/title"
                    android:textAllCaps="false"
                    android:textColor="@color/ole_white"
                    android:text="@string/txtMeetups"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:animateLayoutChanges="true"
                    android:layout_weight="0.5"></LinearLayout>

                <Button
                    android:id="@+id/btnSetting"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textAllCaps="false"
                    android:textColor="@color/ole_white"
                    android:text="@string/check_updates"
                    android:textSize="@dimen/title" />
                <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:layout_weight="0.5"></LinearLayout>
                <Button
                    android:id="@+id/btnLogout"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:textSize="@dimen/title"
                    android:textAllCaps="false"
                    android:textColor="@color/ole_white"
                    android:text="@string/txtLogout"/>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1.3"
                android:layout_height="0dp"
                android:weightSum="6"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="1dp"
                android:animateLayoutChanges="true"
                android:paddingTop="2dp"
                android:id="@+id/layoutMasterTop"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:textAlignment="center"
                    android:animateLayoutChanges="true"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@mipmap/ole_logo"
                        android:id="@+id/imageProfilePics" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.2"
                    android:textAlignment="center"
                    android:weightSum="3.5"
                    android:gravity="center"
                    android:animateLayoutChanges="true"
                    android:paddingLeft="5dp"
                    android:id="@+id/layoutUserInfo">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:animateLayoutChanges="true"
                        android:gravity="left">

                        <TextView
                            android:text="Vi Nation Bell"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lbl_SeverName"
                            android:textColor="@color/light_grey"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.3"
                        android:textAlignment="center"
                        android:animateLayoutChanges="true"
                        android:gravity="center">

                        <TextView
                            android:text="Default Admin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="normal|bold"
                            android:textColor="@color/light_grey"
                            android:textSize="24sp"
                            android:id="@+id/lblName" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:animateLayoutChanges="true"
                        android:gravity="center">

                        <TextView
                            android:text="251 Visits"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lblVisits"
                            android:textColor="@color/light_grey"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2.1"
                    android:textAlignment="center"
                    android:weightSum="4"
                    android:animateLayoutChanges="true"
                    android:gravity="center">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:animateLayoutChanges="true"
                        android:gravity="right">

                        <TextView
                            android:text="Saturday | 17 December, 2016"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/lblDate"
                            android:textColor="@color/light_grey"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:textAlignment="center"
                        android:animateLayoutChanges="true"
                        android:gravity="center">

                        <ExpandableListView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:animateLayoutChanges="true"
                        android:gravity="center"></LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- First layout bar -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:weightSum="4"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:animateLayoutChanges="true"
                android:layout_marginStart="1dp"
                android:id="@+id/layoutMasterLibrary"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/rounded_corners_left">

                    <TextView
                        android:text="@string/bbtext_MyLibrary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblMyLibrary"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        tools:textStyle="bold"
                        android:textSize="@dimen/title"
                        android:textColor="@color/ole_voulet" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.4"
                    android:background="@color/ole_voulet"
                    android:id="@+id/layout_mylibrary"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:animateLayoutChanges="true"
                    android:weightSum="5"
                    android:alpha="0.8">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:id="@+id/layholder_library">

                        </LinearLayout>
                    </HorizontalScrollView>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/rounded_corners_right"></LinearLayout>

            </LinearLayout>

            <!-- Second layout bar -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginLeft="1dp"
                android:animateLayoutChanges="true"
                android:layout_marginStart="1dp"
                android:id="@+id/layoutMasterCoursesProgress"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/rounded_corners_left">

                    <TextView
                        android:text="@string/bbtext_Courses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lblmycourses"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        tools:textStyle="bold"
                        android:textSize="@dimen/title"
                        android:textColor="@color/ole_yellow" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_mycourses"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.4"
                    android:alpha="0.8"
                    android:animateLayoutChanges="true"
                    android:background="@color/ole_yellow"
                    android:orientation="vertical">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/layholder_courses"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                        </LinearLayout>
                    </HorizontalScrollView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:animateLayoutChanges="true"
                        android:background="@drawable/rounded_corners_right"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:textAlignment="center"></LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/rounded_corners_right"></LinearLayout>
            </LinearLayout>

            <!-- Third layout bar -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginStart="1dp"
                android:animateLayoutChanges="true"
                android:layout_marginTop="5dp"
                android:id="@+id/layoutMasterMeetup">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/rounded_corners_left">

                    <TextView
                        android:text="@string/bbtext_Meetups"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        tools:textStyle="bold"
                        android:textSize="@dimen/title"
                        android:textColor="@color/ole_green" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.4"
                    android:animateLayoutChanges="true"
                    android:background="@color/ole_green"
                    android:alpha="0.8"></LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/rounded_corners_right"></LinearLayout>
            </LinearLayout>

            <!-- Forth layout bar -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="1dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_marginStart="1dp"
                android:animateLayoutChanges="true"
                android:baselineAligned="false"
                android:id="@+id/layoutMasterTutors"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/rounded_corners_left">

                    <TextView
                        android:text="@string/bbtext_MyTutors"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        tools:textStyle="bold"
                        android:textSize="@dimen/title"
                        android:textColor="@color/ole_blue" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3.4"
                    android:animateLayoutChanges="true"
                    android:background="@color/ole_blue"
                    android:alpha="0.8"></LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.1"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/rounded_corners_right"></LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

</FrameLayout>
