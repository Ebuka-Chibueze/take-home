<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/frag1_content"
    android:background="#ffffff">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Welcome Leonard"
            android:layout_margin="10dp"
            android:id="@+id/lblWelcome"
            android:gravity="center|center_horizontal|fill_vertical"
            android:paddingTop="@dimen/abc_action_bar_default_padding_start_material"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:typeface="serif"
            android:textAlignment="center"
            android:capitalize="characters" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/frg1_OpenedRes"
                            android:id="@+id/lblOpenedRes"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:textColor="@color/abc_search_url_text_selected"
                            android:layout_weight="2"
                            android:typeface="serif" />

                        <TextView

                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="220"
                            android:id="@+id/lblNoResouces"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:layout_below="@+id/lblOpenedRes"
                            android:background="@drawable/circle"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:typeface="serif"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView"
                    android:src="@drawable/trophy"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="@string/frg1_Visits"
                            android:id="@+id/lblVisitTitle"
                            android:textAlignment="center"
                            android:layout_gravity="center"
                            android:layout_weight="2"
                            android:textColor="@color/abc_search_url_text_selected"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="220"
                            android:id="@+id/lblVisits"
                            android:textAlignment="center"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="2"
                            android:layout_below="@+id/lblVisitTitle"
                            android:background="@drawable/circle"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="30dp"
                            android:typeface="serif"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>